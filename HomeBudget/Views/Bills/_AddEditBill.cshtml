@model AddEditBillViewModel
@inject HomeBudget.BussinesLogic.IPeopleService  _peopleService

<div class="modal fade" tabindex="-1" role="dialog" id="add-bill-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add or Edit Bill</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form method="post" asp-controller="Bills" asp-action="AddBill" id="add-edit-bill-form">
                        <input asp-for="@Model.Bill.Id" hidden="hidden" />
                        <div class="form-group row">
                            <label for="inputDesc" class="col-sm-2 col-form-label">Bill description</label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Bill.Description" type="text" class="form-control" id="inputDesc" placeholder="Description">
                                <span asp-validation-for="@Model.Bill.Description"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inputAmount" class="col-sm-2 col-form-label">Amount</label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Bill.Amount" type="number" step="any" class="form-control" id="inputAmount" placeholder="99,99">
                                <span asp-validation-for="@Model.Bill.Amount"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPersonDropdown" class="col-sm-2 col-form-label">Person</label>
                            <div class="col-sm-10">
                                <select asp-for="@Model.Bill.PersonId" asp-items="@Model.PeopleList" class="form-control" id="inputPersonDropdown">
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputDate" class="col-sm-2 col-form-label">Date</label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Bill.BillDate" type="date" class="form-control" id="inputDate" placeholder="mm/dd/yyyy">
                                <span asp-validation-for="@Model.Bill.BillDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>